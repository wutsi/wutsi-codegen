{{#scope}}
{{#services}}
  {{#database}}
spring:
  flyway:
    clean-disabled: true

  jpa:
    show-sql: false

  datasource:
    url: ${SPRING_DATABASE_URL}
    username: ${SPRING_DATABASE_USERNAME}
    password: ${SPRING_DATABASE_PASSWORD}
  {{/database}}

  {{#cache}}
memcached:
  enabled: true
  username: ${MEMCACHIER_USERNAME}
  password: ${MEMCACHIER_PASSWORD}
  servers: ${MEMCACHIER_SERVERS}
  {{/cache}}
  {{#mqueue}}
rabbitmq:
  enabled: true
  url: ${CLOUDAMQP_URL}
  thread-pool-size: 8
  {{/mqueue}}
{{/services}}

logging:
  pattern:
    console: "request_id=%X{request_id} type=%level logger=%class{20} thread=%thread %m%n"
    file: "request_id=%X{request_id} type=%level logger=%class{20} thread=%thread %m%n"
{{/scope}}
